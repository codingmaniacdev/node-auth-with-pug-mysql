extends layout

block content
  h1 Welcome to Dashboard
  hr
  table.styled-table
    thead 
        tr
            th #
            th Date
            th Name
            th Email
            th Username
            th Action

        tbody
          if(data && Object.keys(data).length !==0)
          each user, index in data
            tr 
                td= index + 1 
                td= new Date(user.createdAt).toLocaleDateString()
                td= user.name 
                td= user.email
                td= user.username
                td 
                    a(href=`/edit/${user.id}`) Edit |
                    a(href=`/delete/${user.id}`, onclick="return confirm('Are you sure you want to delete this user?')") Delete  
          else
            tr 
                td(colspan="7") No Records Found